{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('gallery') }}
{% endblock %}

{% block body %}

    <h1 id="gallery-title">Les Actualit√©s</h1>
    {% for article in articles %}
    <div class="article-date">
      <p> {{ article.date|date("d/m/Y") }}</p>
    </div>
    <div class="article-container">
      <div class="article-content">
      
        <div class="image-grid">
          
          {% for image in article.image %}
            <div class="article-image">
              <img class="gallery-img" src="{{ vich_uploader_asset(image, 'urlFile') }}" alt="{{ image.nom }} poster">
            </div>
          {% endfor %}
        </div>
        <div class="article-text">
          <h1 class="article-title">{{ article.titre|capitalize }}</h1>
          <p class="article-text">{{ article.description }}</p>
        </div>
      </div>
    {{ include('form/_deleteArticle.html.twig') }}
    </div>
    {% endfor %}

    </div>

{% endblock %}
