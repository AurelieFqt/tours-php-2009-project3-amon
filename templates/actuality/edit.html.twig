{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('form') }}
{% endblock %}

{% block title %}Editer un article{% endblock %}


{% block body %}
{% if app.user%}

<h1>Edit Article</h1>

{{ form_start(form) }}
{{ form_widget(form) }}
<br>
<hr>
<br>
    <button class="btn">{{ button_label|default('Enregistrer les modifications') }}</button>
{{ form_end(form) }}

{% for image in article.image %}
<div class="image-container">
    <img class="gallery-img" src="{{ vich_uploader_asset(image, 'urlFile') }}" alt="{{ image.nom }} poster">
    <div class="button-container">
            {{ include('form/_deleteImage.html.twig') }}
    </div>
</div>

{% endfor %}

    <a href="{{ path('actuality') }}">Retour aux actualités</a>
    {% else %}
        <p class="not_connected">Vous n'êtes pas connecté.</p>
{% endif %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('form') }} 
{% endblock %}
{% endblock %}
