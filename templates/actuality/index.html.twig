{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('gallery') }}
{% endblock %}

{% block title %}Actualités{% endblock %}

{% block body %}

<div id="gallery-title"><h1>Les Actualités</h1></div>
{% for article in articles %}
<div class="article-date">
	<p> {{ article.date|date("d/m/Y") }}</p>
</div>
<div class="article-container">
	<div class="article-content">

		<div class="image-grid">
			{% for image in article.image %}
			<div class="article-image">
				<img class="gallery-img" src="{{ vich_uploader_asset(image, 'urlFile') }}" alt="{{ image.nom }} poster">
			</div>
			{% endfor %}
			<div class="article-button-container">
				{% if app.user %}
				<form method="post" action="{{ path('actuality_edit', {'id': article.id}) }}">
					<input type="hidden" name="_method" value="EDIT">
					<input type="hidden" name="_token" value="{{ csrf_token('edit' ~ article.id) }}">
					<button class="edit-article-button"></button>
				</form>
				{{ include('form/_deleteArticle.html.twig') }}
				{% endif %}
			</div>
		</div>
		<div class="article-text">
			<h1 class="article-title">{{ article.titre|capitalize }}</h1>
			<p class="article-text">{{ article.description }}</p>

		
		</div>
	</div>
</div>
	{% endfor %}

	{% endblock %}